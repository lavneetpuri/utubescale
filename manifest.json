{
  "manifest_version": 2,
  "name": "Utubescale",
  "version": "0.1",
  "author": "Lavneet Puri",
  "description": "This extension lets you tweak the youtube layout size to you liking",
  "browser_action": {
    "default_title": "Utubescale",
    "default_popup": "dist/frontend/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/"
      ],
      "js": [
        "scripts/reset-layout.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}